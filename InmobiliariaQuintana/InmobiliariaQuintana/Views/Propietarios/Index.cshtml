@model IEnumerable<InmobiliariaQuintana.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Propietarios</h1>

<p>
    <a asp-action="Create">Crear Propietario</a>
</p>
<table class="table table-warning">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPropietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                

                <a class="btn btn-warning" asp-action="Edit" asp-controller="Propietarios" asp-route-id="@item.IdPropietario" title="Edit"><i class="fas fa-pencil-alt"></i> </a>
                <a class="btn btn-warning" asp-action="Details" asp-controller="Propietarios" asp-route-id="@item.IdPropietario" title="Details"><i class="far fa-list-alt"></i> </a>
                <a class="btn btn-warning" asp-action="Delete" asp-controller="Propietarios" asp-route-id="@item.IdPropietario" title="Delete"> <i class="fas fa-trash-alt"></i></a>
                <a class="btn btn-warning" asp-action="VerInmuebles" asp-controller="Propietarios" asp-route-id="@item.IdPropietario" title="Ver Inmuebles"> <i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
