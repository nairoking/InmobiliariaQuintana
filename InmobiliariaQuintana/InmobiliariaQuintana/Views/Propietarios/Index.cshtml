@model IEnumerable<InmobiliariaQuintana.Models.Propietario>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Propietarios</h1>

<p>
    <a asp-action="Create">Crear Propietario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPropietario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPropietario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                <i class="fas fa-pencil-alt"> @Html.ActionLink("Edit", "Edit", new { id = item.IdPropietario }) |</i>
                @Html.ActionLink("Details", "Details", new { id = item.IdPropietario }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdPropietario })|
                @Html.ActionLink("Ver Inmuebles", "VerInmuebles", new { id = item.IdPropietario })
            </td>
        </tr>
}
    </tbody>
</table>
