@model IEnumerable<InmobiliariaQuintana.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Contratos</h1>

<p>
    <a asp-action="Create">Crear nuevo contrato</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InquilinoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InmuebleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDesde)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHasta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreGarante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNIGarante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefonoGarante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdContrato)
                </td>
                <td>
                    @(item.inqui.Nombre + " " + item.inqui.Apellido)
                </td>
                <td>
                    @(item.InmuebleId + " - " + item.inmueble.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDesde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaHasta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreGarante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DNIGarante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefonoGarante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdContrato }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IdContrato }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdContrato })|
                    

                    <!-- <a class="btn btn-primary" asp-action="Edit" asp-controller="Contrato" asp-route-id="@item.IdContrato" title="Edit"><i class="fas fa-pencil-alt"></i> </a>
    <a class="btn btn-primary" asp-action="Details" asp-controller="Contrato" asp-route-id="@item.IdContrato" title="Details"> </a>
    <a class="btn btn-primary" asp-action="Delete" asp-controller="Contrato" asp-route-id="@item.IdContrato" title="Delete"> </a>
    
                        -->
                    <a class="btn btn-primary" asp-action="Index" asp-controller="Pago" asp-route-id="@item.IdContrato" title="Pagos">Pagos </a>


                </td>
                        </tr>
                }
                    </tbody>
                </table>
